@model devmgr.Models.MyIdentify

@{
    ViewBag.Title = "changepasswd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>修改密码</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.Label("旧密码", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("oldpwd", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.oldpwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("新密码", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("newpwd", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newpwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("确认新密码", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("newpwd2", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newpwd2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" >
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确定修改" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返 回", "Edit")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
